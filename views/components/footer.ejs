<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="footer-section">
                    <a class="logo" href="#"><img src="/dist/img/logo.png" alt="Kuote"></a>
                    <p class="copyright">Kuote &copy; <%= (new Date()).getFullYear() %>. All rights reserved.</p>
                    <p class="copyright">Designed by <a href="http://angga-ari.com" target="_blank">Angga Ari Wijaya</a></p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="footer-section">
                    <h5 class="title"><b>CATEGORIES</b></h5>
                    <ul class="d-flex flex-wrap">
                        <% for(let popularTag of popularTags) { %>
                            <li style="flex-basis: 50%" class="text-uppercase">
                                <a href="/quotes/category/<%= popularTag.tag.replace(' ', '-') %>">
                                    <%= popularTag.tag %>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="footer-section">
                    <h5 class="title"><b>SUBSCRIBE</b></h5>
                    <div class="input-area">
                        <form action="/subscribe" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input class="email-input" type="text" placeholder="Enter your email" name="email">
                            <button class="submit-btn" type="submit"><i class="icon ion-ios-email-outline"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

