<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../components/header') %>
</head>
<body>
<%- include('../components/navigation') %>

<section class="section">
    <div class="container">

        <div class="row">
            <% if(quoteThumbnails.length > 0) { %>
                <div class="row">
                    <% for (let quote of quoteThumbnails) { %>
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100">
                            <%- include('../quote/_thumbnail', {quote}) %>
                        </div>
                    </div>
                    <% } %>
                </div>
            <% } %>

            <div class="col-lg-8 col-md-12">
                <div class="card h-100">
                    <%- include('../quote/_post_full', {quote: quoteFull}) %>
                </div>
            </div>

            <% if(quoteSimples.length > 0) { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100">
                        <% for (let quote of quoteSimples) { %>
                            <%- include('../quote/_post_simple', {quote}) %>
                        <% } %>
                    </div>
                </div>
            <% } %>

        </div>

    </div>
</section>

<%- include('../components/footer') %>
</body>
</html>
