<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../components/header') %>
</head>
<body>
<%- include('../components/navigation') %>

<section class="section">
    <div class="container">
        <div class="col-sm-4 mx-auto text-center">
            <h3>Register</h3>
            <p class="text-muted">Create new account</p>
            <div class="card-box">
                <form action="/register" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="form-group">
                        <input type="text" name="name" class="form-control"
                               placeholder="Your full name" required maxlength="50">
                    </div>
                    <div class="form-group">
                        <input type="text" name="username" class="form-control"
                               placeholder="Username" required maxlength="50">
                    </div>
                    <div class="form-group">
                        <input type="email" name="email" class="form-control"
                               placeholder="Email address" required maxlength="50">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control"
                               placeholder="Password" required maxlength="50">
                    </div>
                    <div class="form-group mb-4">
                        <input type="password" name="confirm_password" class="form-control"
                               placeholder="Repeat your password" maxlength="50">
                    </div>
                    <button class="btn-block submit-btn mb-3" type="submit" id="form-submit">REGISTER</button>
                    <a href="/login">Register already? Login here</a>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('../components/footer') %>
</body>
</html>